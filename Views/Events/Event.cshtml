@using ERDSPortal.Models
@model IEnumerable<Events>

@{
    ViewBag.Title = "Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mt-2">
        <div class="row">
            <div class="col-lg-12" align="center">
                <div id="teamheader">Title</div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="teamsubheader">Date: </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="teamsubheader">Location: </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="teamsubheader">Details: </div>
            </div>
        </div>
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>Customer Id</th>
                <th>Name</th>
                <th>Country</th>
            </tr>
            @foreach (Events eventInstance in Model)
        {
        <tr>
            <td>@eventInstance.EventID</td>
            <td>@eventInstance.Title</td>
            <td>@eventInstance.Date</td>
            <td>@eventInstance.Location</td>
            <td>@eventInstance.Details</td>
        </tr>
        }
        </table>
    </div>

