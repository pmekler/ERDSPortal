@model IEnumerable<ERDSPortal.Models.Accomplishment>

@{
    ViewBag.Title = "Accomplishments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Accomplishments</h2>

<p>
    @Html.ActionLink("Submit New Accomplishment", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>

        <th>Focus Areas</th>

        <th>Value Drivers</th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TeamName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Details)
    </td>
    <td>
        @foreach (var vd in item.FocusAreas)
        {
            <img src="@vd.Icon" width="120" title="@vd.Name" />
        }
    </td>
    <td>
        @foreach (var vd in item.ValueDrivers)
        {
            <img src="@vd.Icon" title="@vd.Name" />
        }
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.AccomplishmentId }) |
        @Html.ActionLink("Details", "Details", new { id = item.AccomplishmentId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.AccomplishmentId })
    </td>
</tr>
}

</table>

